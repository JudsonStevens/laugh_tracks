<!-- views/comedians/index.erb -->
<html>
  <head></head>
  <body>
    <h3>Average Comedian Age:
      <%= @average_comedian_age.round(1) %>
    </h3>
    <% @comedians.each do |comedian| %>
      <ul>
        <li><%= comedian.name %></li>
        <li><%= comedian.age %></li>
        <% comedian.specials.each do |special| %>
          <li><%= special.name %></li>
        <% end %>
      </ul>
    <% end %>
  </body>
</html>